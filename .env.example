# ============================================================
# JUSTO BOOKING - ENVIRONMENT VARIABLES
# Copy this to .env and fill in your values
# ============================================================

# Server
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/justo_booking

# Redis (for distributed locks - prevents double booking)
REDIS_URL=redis://localhost:6379

# Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Pipedrive
PIPEDRIVE_API_KEY=your_pipedrive_api_key
PIPEDRIVE_COMPANY_DOMAIN=yourcompany  # e.g. "justo" â†’ justo.pipedrive.com

# Email (SMTP) - for confirmation emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_smtp_password
EMAIL_FROM=Justo Demos <noreply@yourdomain.com>

# App
BOOKING_SLOT_DURATION_MIN=30
BOOKING_DAYS_AHEAD=14        # how many days forward to show availability
BOOKING_START_HOUR=8         # local hour when slots begin (per seller timezone)
BOOKING_END_HOUR=18          # local hour when slots end
SLOT_LOCK_TTL_SEC=120        # seconds to hold a slot during checkout
